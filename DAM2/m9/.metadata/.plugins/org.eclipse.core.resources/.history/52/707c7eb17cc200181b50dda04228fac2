public class Main extends Thread {
	int threadIndex = -1;
	public Main(int i){
	threadIndex = i;
	}
	
	//el mètode run() és invocat per Thread.start()
	public void run(){
		for(int x=(threadIndex-1)*10;x<threadIndex*10;x++) {
			System.out.print(x+" ");
		}
		System.out.println();
	}
	
	public static void main(String[] args) throws InterruptedException {
		Thread t1 = new Thread(new Main(1));
		Thread t2 = new Thread(new Main(2));
		Thread t3 = new Thread(new Main(3));
		Thread t4 = new Thread(new Main(4));
		Thread t5 = new Thread(new Main(5));
		
		
		t1.start(); //invocarà el mètode run()
		t2.start();
		t3.start();
		t4.start();
		t5.start();
	}
}